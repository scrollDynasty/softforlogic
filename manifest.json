{
  "manifest_version": 3,
  "name": "Schneider FreightPower Monitor",
  "version": "1.0.0",
  "description": "Автоматический мониторинг грузов на Schneider FreightPower",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://freightpower.schneider.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://freightpower.schneider.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FreightPower Monitor"
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
